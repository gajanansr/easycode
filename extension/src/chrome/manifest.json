{
  "manifest_version": 3,
  "name": "EasyCode",
  "version": "1.0.0",
  "description": "Simplify LeetCode problems with AI-powered explanations",
  "permissions": ["activeTab"],
  "host_permissions": ["https://leetcode.com/*", "http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
